<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyx.dao.EmployeeDao">

    <!--保存员工信息-->
    <insert id="save" parameterType="com.lyx.entity.Employee"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_employee(emp_id,username,password,realname,post,team_id)
        values(#{empId},#{username},#{password},#{realName},#{post},#{teamId})
    </insert>

    <!--查找所有员工-->
    <select id="findAll" resultType="com.lyx.entity.Employee">
        select emp_id,username,password,realname,post,team_id
        from t_employee
    </select>

    <!--根据id查找员工-->
    <select id="findById" parameterType="String" resultType="com.lyx.entity.Employee">
        select emp_id,username,password,realname,post,team_id
        from t_employee where emp_id = #{empId}
    </select>

    <!--根据id删除员工-->
    <delete id="delete" parameterType="String">
        delete from t_employee where emp_id = #{empId}
    </delete>


    <!--更新员工信息-->
    <update id="update" parameterType="com.lyx.entity.Employee">
        update t_employee set username=#{username},password=#{password},post=#{post},team_id=#{teamId}
        where emp_id = #{empId}
    </update>

    <!--根据(组名,姓名,id)条件查询员工-->
    <select id="findList" parameterType="com.lyx.dto.query.EmployeeQueryDto" resultType="com.lyx.entity.Employee">
        SELECT e.emp_id,e.username,e.password,e.realname,e.post,e.team_id
        FROM t_employee e
        LEFT JOIN t_team t
        ON e.team_id = t.team_id
        <where>
            <if test="teamName != null and teamName != ''">
                AND t.name like CONCAT('%',#{teamName},'%')
            </if>
            <if test="realName != null and realName != ''">
                AND e.realname like CONCAT('%',#{realName},'%')
            </if>
            <if test="empId != null and empId != ''">
                AND e.emp_id = #{empId}
            </if>
        </where>
    </select>
</mapper>